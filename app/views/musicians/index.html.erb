<p id="notice"><%= notice %></p>

<h1>Musicians</h1>

  <%= link_to 'Khmer', musicians_path(origin: 'Khmer') %>
  <%= link_to 'Western', musicians_path(origin: 'USA') %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Origin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musicians.each do |musician| %>
      <tr>
        <td><%= musician.name %></td>
        <td><%= image_tag musician.image(:medium) %></td>
        <td><%= musician.description %></td>
        <td><%= musician.genre %></td>
        <td><%= musician.origin %></td>
        <td><%= link_to 'Show', musician %></td>
        <td><%= link_to 'Edit', edit_musician_path(musician) %></td>
        <td><%= link_to 'Destroy', musician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Musician', new_musician_path %>
