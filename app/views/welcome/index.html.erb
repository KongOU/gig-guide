<div class="container-fluid">
  <%= render 'layouts/banner' %>
</div>
<div class="container">
  <%= form_tag search_events_path, method: :get, class: 'navbar-form navbar-left' do %>
    <%= text_field_tag :search, params[:search], class: 'form-control' %>
    <%= submit_tag 'Search', name: nil, class: 'btn btn-default' %>
  <% end %>
</div>
<div class="container">
  <div class="row">
  <h1 class="text-center">All Gigs <%= @d %></h1>
  <% @current_event.each do |event| %>
    <% if event.origin_id == 1 %>
        <div class="col-md-4">
          <div class="main-photo">
            <%= link_to (image_tag(event.image, size: '400x200', class:'nametag-photo')), event_path(event) %>
            <div class="group-title">
              <h3><%= link_to event.title, event_path(event) %></h3>
              <p><%= link_to event.start_on, event_path(event) %></p>
              <p><%= link_to truncate(event.location, length: 50), event_path(event) %></p>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>

  <% @current_event.each do |event| %>
    <% if event.origin_id == 2 %>
        <div class="col-md-4">
          <div class="main-photo">
            <%= link_to (image_tag(event.image, size: '400x200', class:'nametag-photo')), event_path(event) %>
            <div class="group-title">
              <h3><%= link_to event.title, event_path(event) %></h3>
              <p><%= link_to event.start_on, event_path(event) %></p>
              <p><%= link_to truncate(event.location, length: 50), event_path(event) %></p>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
